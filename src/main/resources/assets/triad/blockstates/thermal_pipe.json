{
  "multipart": [
    {
      "apply": { "model": "triad:block/thermal_pipe" }
    },
    {
      "when": { "north": "true" },
      "apply": { "model": "triad:block/thermal_pipe_side", "uvlock": true }
    },
    {
      "when": { "east": "true" },
      "apply": { "model": "triad:block/thermal_pipe_side", "y": 90, "uvlock": true }
    },
    {
      "when": { "south": "true" },
      "apply": { "model": "triad:block/thermal_pipe_side", "y": 180, "uvlock": true }
    },
    {
      "when": { "west": "true" },
      "apply": { "model": "triad:block/thermal_pipe_side", "y": 270, "uvlock": true }
    },
    {
      "when": { "up": "true" },
      "apply": { "model": "triad:block/thermal_pipe_top", "uvlock": true }
    },
    {
      "when": { "down": "true" },
      "apply": { "model": "triad:block/thermal_pipe_bottom", "uvlock": true }
    }
  ]
}